<div class="row">
  <div class="col-8">
    <% @posts.each do |post| %>
      <div class="insta-post">
        <div class="post-meta">
          <%= link_to image_tag(post.account.image_url, class: "img-circle"), profile_path(post.account.username) %>
          <%= link_to post.account.username, profile_path(post.account.username), class: "text-dark" %>
        </div>
        <%= image_tag post.image_url, class: "img img-fluid" %>
          <div class="post-details">
            <p><strong><%= post.total_likes %> Likes</strong></p>
            <strong><%= link_to post.account.username, profile_path(post.account.username), class: 'text-dark' %></strong> <%= simple_format post.description %>
         
           <p class="text-muted"> <%= time_ago_in_words post.created_at %> ago </p>
          </div>
      </div>
    <% end %>
  </div>
  <div class="col-4">
    <div class="account-summary">
      <p class=> <strong><%= current_account.username %></strong><br>
      <%= current_account.full_name %> </p>
    </div>
      <div class="follower-suggestions">
        
      </div>
  </div>
</div>
