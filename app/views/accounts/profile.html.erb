<div class="container">
  <div class="row">
    <div class="col-4">
      <%= profile_picture @account, 200 %>
    </div>
    <div class="col-8 text-left">
      <h1><%= @account.full_name %></h1>
      <%= link_to "Edit profile", edit_account_registration_path, class: "btn btn-secondary" if can_edit_profile?(@account.id) %>

      <div class="row profile-status">
        <div class="col-4">
          <%= @account.posts.count %>Posts
        </div>
        <div class="col-4">
          <%= @account.total_followers %>Followers
        </div>
        <div class="col-4">
          <%= @account.total_following %>Following
        </div>
      </div>

      <p><%= @account.full_name %></p>
      <%= simple_format( @account.descriptin) %>
      <p><%= link_to  @account.webstie if @account.webstie.present? %></p>
    </div>
  </div>

  <div class="row profile-posts">
    <% @posts.each do |post| %>
      <div class="col-4">
        <div class="insta-post">
          <%= image_tag post.image_url, class: "img img-fluid" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
