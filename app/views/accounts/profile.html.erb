<div class="container">
  <div class="row">
    <div class="col-4">
      <%= image_tag @account.image_url, class: "img-rounded profile-pic " %>
    </div>
    <div class="col-8 text-left">
      <h1><%= @account.full_name %></h1>
      <%= link_to "Edit profile", edit_account_registration_path, class: "btn btn-secondary" %>
      <div class="profile-status"><%= @account.posts.count %>Posts</div>
      <div class="profile-status"><%= @account.total_followers %>Followers</div>
      <div class="profile-status"><%= @account.total_following %>Following</div>

      <p><%= @account.full_name %></p>
      <%= simple_format( @account.descriptin) %>
      <p><%= link_to  @account.webstie if @account.webstie.present? %></p>
    </div>
  </div>

  <div class="row profile-posts">
    <% @posts.each do |post| %>
      <div class="col-4">
        <div class="insta-post">
          <%= image_tag post.image_url, class: "img img-fluid" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
